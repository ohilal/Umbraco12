@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "Master.cshtml";
}
<!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs d-flex align-items-center" style="background-image: url('@Model.Value("heroImage")');">
      <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">

        <h2>@Model.Value("subBannerTitle")</h2>
        @await Html.PartialAsync("Breadcrumbs")
      </div>
    </div><!-- End Breadcrumbs -->

        <!-- ======= Blog Details Section ======= -->
    <section id="blog" class="blog">
      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row g-12">

          <div class="col-lg-12">
@Model.Value("thumbnailImage")
            <article class="blog-details">

              <div class="post-img">
                <img src= '@Model.Value("thumbnailImage")' alt="" class="img-fluid">
              </div>

              <h2 class="title">
                    @Model.Value("introText")
              </h2>

              <div class="meta-top">
                <ul>
                <!--  <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a href="blog-details.html">John Doe</a></li> 
                  <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a href="blog-details.html"><time datetime="2020-01-01">Jan 1, 2022</time>@Model.Value("newsDate")</date></a></li>-->
                                    <li class="d-flex align-items-center"><i class="bi bi-calendar"></i> <a href="blog-details.html"><time datetime="2020-01-01">@Model.Value("newsDate")</time></a></li>
                </ul>
              </div><!-- End meta top -->

              <div class="content">
                <p>
                
@Model.Value("bodyText")</p>
<blockquote>
    @Model.Value("blockquoteArea")
</blockquote>
<p>@Model.Value("bodyText2")</p>
              
                <img src="/assets/img/blog/blog-inside-post.jpg" class="img-fluid" alt="">


              </div><!-- End post content -->


            </article><!-- End blog post -->


          </div>

        
        </div>

      </div>
    </section><!-- End Blog Details Section -->